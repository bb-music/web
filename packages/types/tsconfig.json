{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declaration": true
  },
  "include": ["**/*.ts"]
}
